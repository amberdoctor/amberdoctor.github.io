function philContactInfo() {
	document.getElementById('name').innerHTML = '{{ phil_name }}';
	document.getElementById('email').innerHTML = '{{ phil_email }}';
	document.getElementById('github').innerHTML = '{{ phil_github }}';
	document.getElementById('linkedin').innerHTML = '{{ phil_linkedin }}';
};

